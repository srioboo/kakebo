root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = false
max_line_length = 120
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.http,*.rest}]
indent_size = 0

[{*.properties,spring.handlers,spring.schemas}]
ij_properties_keep_blank_lines = true

[{*.yaml,*.yml}]
indent_size = 2
